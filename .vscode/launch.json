    "version": "0.2.0",
    "configurations": [
        {
            "name": "Pymol37",
            "type": "python",
            "request": "launch",
            "args": ["-i", "test_pymol.py"],
            "module": "IPython",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}/.virtualenv/bin/python",
            "env": {
                "QTHREAD_DEBUGGING": "True",
                "PATH": "${workspaceFolder}/bin/:$PATH",
                "LOG_CBR_EXTRA": "${workspaceFolder}/logs/cbrextra.log"
            }
        },
        {
            "name": "Pymol37-Windows",
            "type": "python",
            "request": "launch",
            "args": ["-i", "test_pymol.py"],
            "module": "IPython",
            "console": "integratedTerminal",
            "justMyCode": false,
            "python": "${workspaceFolder}\\.virtualenv\\Scripts\\python.exe",
            "env": {
                "QTHREAD_DEBUGGING": "True",
                "PATH": "${workspaceFolder}\\bin"
            }
        }
    ]
}