{
  "configurations": {
    "run": {
      "adapter": "debugpy",
      "breakpoints": {
        "exception": {
          "all": "N",
          "uncaught": "N"
        }
      },
      "configuration": {
        "request": "launch",
        "protocol": "auto",
        "stopOnEntry": true,
        "console": "integratedTerminal",
        "program": "${workspaceRoot}/test_pymol.py",
        "cwd": "${workspaceRoot}"
      }
    },
    "test": {
      "adapter": "debugpy",
      "breakpoints": {
        "exception": {
          "all": "N",
          "uncaught": "Y"
        }
      },
      "stopOnEntry": false,
      "configuration": {
        "request": "launch",
        "protocol": "auto",
        "stopOnEntry": true,
        "console": "integratedTerminal",
        "module": "pytest",
        "args": [
          "--capture=no",
          "${workspaceRoot}/tests/",
          "-k",
          "2"
        ],
        "cwd": "${workspaceRoot}",
        "stopOnEntry": false,
        "env": {
          "WAYLAND_DISPLAY": "/tmp/lewayland",
          "QT_QPA_PLATFORM": "wayland",
          "PATH": "/nix/workspace/projects/cbr-tools-extra/:$PATH"
        }
      }
    }
  }
}
